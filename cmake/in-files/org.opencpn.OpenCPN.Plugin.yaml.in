id: org.opencpn.OpenCPN.Plugin.${PACKAGE}
runtime: org.opencpn.OpenCPN
runtime-version: master
sdk: org.freedesktop.Sdk//18.08
build-extension: true
separate-locales: false
appstream-compose: false
modules:
  - name: tinyxml
    builddir: false
    no-autogen: true
    buildsystem: simple
    build-commands: 
       - mkdir /run/build/tinyxml/build
       - cd /run/build/tinyxml/build; cmake ..
       - cd /run/build/tinyxml/build; make
       - test -d /app/extensions/${PACKAGE}/lib || mkdir -p /app/extensions/${PACKAGE}/lib
       - test -d /app/extensions/${PACKAGE}/include || mkdir -p /app/extensions/${PACKAGE}/include
       - cp /run/build/tinyxml/build/libtinyxml.so  /app/extensions/${PACKAGE}/lib
       - cp /run/build/tinyxml/tinyxml.h /app/extensions/${PACKAGE}/include
    no-make-install: true
    sources:
       - type: git
         url: https://github.com/leamas/tinyxml.git
         branch: master

  - name: ${PACKAGE}
    no-autogen: true
    buildsystem: cmake
    builddir: true
    config-opts:
        - -DCMAKE_INSTALL_PREFIX=/app/extensions/${PACKAGE}
        - -DOCPN_FLATPAK_BUILD=ON
    build-options:
        cflags: -fPIC
        cxxflags: -fPIC
    sources:
       - type: git
         url: git://${GIT_REPOSITORY_SERVER}/${GIT_REPOSITORY}
         ${GIT_BRANCH_OR_TAG}: ${GIT_REPOSITORY_ITEM}
